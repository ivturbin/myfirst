<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/man"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                app:layout_constraintWidth_default="spread"
                android:src="@drawable/image_man"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_name"
                android:layout_marginLeft="@dimen/base_margin"
                android:layout_marginTop="@dimen/base_margin"
                android:textSize="24sp"
                android:textColor="@color/black_87"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/man"
                android:layout_marginStart="@dimen/base_margin" />

            <TextView
                android:id="@+id/birth_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_margin"
                android:layout_marginTop="@dimen/base_margin"
                android:textSize="12sp"
                android:textColor="@color/black_38"
                android:text= "@string/birth_date_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name"
                android:layout_marginStart="@dimen/base_margin" />

            <TextView
                android:id="@+id/birth_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_margin"
                android:textSize="@dimen/base_text_size"
                android:text= "@string/birth_date"
                android:textColor="@color/black_87"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/birth_date_label"
                android:layout_marginStart="@dimen/base_margin" />

            <TextView
                android:id="@+id/field_of_activity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_margin"
                android:textSize="12sp"
                android:textColor="@color/black_38"
                android:layout_marginTop="@dimen/base_margin"
                android:text= "@string/field_of_activity_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/birth_date"
                android:layout_marginStart="@dimen/base_margin" />

            <TextView
                android:id="@+id/field_of_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_margin"
                android:textSize="@dimen/base_text_size"
                android:text= "@string/field_of_activity"
                android:textColor="@color/black_87"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/field_of_activity_label"
                android:layout_marginStart="@dimen/base_margin" />

            <TextView
                android:id="@+id/get_push"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_margin"
                android:layout_marginTop="@dimen/min_margin"
                android:textSize="@dimen/base_text_size"
                android:text= "@string/get_push"
                android:textColor="@color/black_87"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/field_of_activity"
                android:layout_marginStart="@dimen/base_margin" />

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/get_push"
                app:layout_constraintTop_toBottomOf="@id/field_of_activity"
                android:layout_marginRight="@dimen/base_margin"
                android:layout_marginLeft="50dp"
                android:checked="true"
                android:layout_marginEnd="@dimen/base_margin"
                android:layout_marginStart="50dp" />

            <view
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:color = "@color/black_87"
                android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@id/get_push"
                />

            <TextView
                android:id="@+id/friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_margin"
                android:textSize="12sp"
                android:textColor="@color/black_38"
                android:text= "@string/friends"
                android:layout_marginTop="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider1"
                android:layout_marginStart="@dimen/base_margin" />


            <ImageView
                android:id="@+id/friend1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/avatar_1"
                app:layout_constraintTop_toBottomOf="@id/friends"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="@dimen/base_margin"
                android:layout_marginTop="@dimen/fab_margin"
                android:layout_marginStart="@dimen/base_margin" />

            <TextView
                android:id="@+id/friend1Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_margin"
                android:layout_marginTop="@dimen/min_margin"
                android:textSize="@dimen/base_text_size"
                android:text= "@string/friend1"
                android:textColor="@color/black_87"
                app:layout_constraintStart_toEndOf="@id/friend1"
                app:layout_constraintTop_toTopOf="@id/friend1"
                android:layout_marginStart="@dimen/base_margin" />

            <ImageView
                android:id="@+id/friend2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/avatar_2"
                app:layout_constraintTop_toBottomOf="@id/friend1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="@dimen/base_margin"
                android:layout_marginTop="@dimen/fab_margin"
                android:layout_marginStart="@dimen/base_margin" />

            <TextView
                android:id="@+id/friend2Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_margin"
                android:layout_marginTop="@dimen/min_margin"
                android:textSize="@dimen/base_text_size"
                android:text= "@string/friend2"
                android:textColor="@color/black_87"
                app:layout_constraintStart_toEndOf="@id/friend2"
                app:layout_constraintTop_toTopOf="@id/friend2"
                android:layout_marginStart="@dimen/base_margin" />

            <ImageView
                android:id="@+id/friend3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/avatar_3"
                app:layout_constraintTop_toBottomOf="@id/friend2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="@dimen/base_margin"
                android:layout_marginTop="@dimen/fab_margin"
                android:layout_marginStart="@dimen/base_margin" />

            <TextView
                android:id="@+id/friend3Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_margin"
                android:layout_marginTop="@dimen/min_margin"
                android:textSize="@dimen/base_text_size"
                android:text= "@string/friend3"
                android:textColor="@color/black_87"
                app:layout_constraintStart_toEndOf="@id/friend3"
                app:layout_constraintTop_toTopOf="@id/friend3"
                android:layout_marginStart="@dimen/base_margin" />

            <view
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:color = "@color/black_87"
                android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@id/friend3"
                />

           <Button
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               app:layout_constraintWidth_default="wrap"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@id/divider2"
               android:layout_marginTop="@dimen/base_margin"/>
        </androidx.constraintlayout.widget.ConstraintLayout>



    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>