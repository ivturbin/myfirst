<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- активное состояние (30% прозрачности для фона) -->
        <item name="colorControlActivated">@color/leaf</item>
        <!-- неактивное состояние ползунка -->
        <item name="colorSwitchThumbNormal">@android:color/holo_orange_dark</item>
        <!-- цвет дорожки для неактивного состояния (30% прозрачности) -->
        <item name="android:colorForeground">@android:color/darker_gray</item>
    </style>

    <style name="ToolbarTextView" parent="Theme.MyApplication.NoActionBar">
        <item name="fontFamily">@font/officina_sans_scc_extrabold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <style name="TextView" parent = "Theme.MyApplication.NoActionBar">
        <item name="android:layout_marginStart">@dimen/base_margin</item>
        <item name="android:textSize">@dimen/base_text_size</item>
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="DeclarationTextView" parent = "Theme.MyApplication.NoActionBar">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:layout_marginStart">@dimen/base_margin</item>
        <item name="android:textColor">@color/black_38</item>
    </style>
</resources>